    <link rel="stylesheet" href="/fas/css/all.css">
    <link rel="stylesheet" href="/css/style.css">
</head>



<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-md navbar-light fixed-top" id="navBar">
  <div class="container">
      <a class="navbar-brand" href="/profile"><img src="/img/logo.svg"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                  <a class="" href="/profile">Accueil</a>
              </li>
              <li class="nav-item">
                  <a class="" href="/simulationClient">Simulation</a>
              </li>
              <li class="nav-item">
                  <a class="" href="/assistanceClient">Assistance</a>
              </li>
              <li class="nav-item">
                  <a class="" href="/contact">Contact</a>
              </li>
              <li class="nav-item">
                  <a class="btn-nav" href="/logout">Déconnexion</a>
              </li>
          </ul>
      </div>
  </div>
</nav>

<main class="p-pro">
<div class="container">
    <div class="row">
        <!-- Information utilisateur -->
        <div class="col-12 col-md-8 col-lg-9">
            <div class="paper pro-user">
                <h4>Vos demandes </h4>
                <ul class="fa-ul">

            </div>
        </div>
        <!-- nombre RDV -->
        <div class="d-none d-md-block col-md-4 col-lg-3">
          <div class="paper pro-ntf" id="paper-bg-green">
            <div class="nb-demandes text-center">
              <p class="t-body-2">Vous avez envoyez</p>
              <h3><%= total %></h3>
              <p>Vos Demandes</p>
            </div>
          </div>
        </div>
    </div>

 
        <!-- Partie demande -->
        <div class="col-12 col-md-8">
            <div class="paper pro-main">
              <hr />
              <div class="profil-table-demande">
                <table class="table">
                  <thead>
                    <tr>

                      <th scope="col">Capital</th>
                      <th scope="col">Le durée de crédit</th>
                      <th scope="col">La monsualité</th>
                      <th scope="col">Etat de dossier</th>
                      <th></th>
          
          
                    </tr>
                  </thead>
                  <tbody>
                  <% items.forEach(function(item,index){ %>
                    <tr>

                      <td><%= item.capital %></td>
                      <td><%= item.duréeCr %></td>
                      <td><%= item.monsualité %></td>
                      <td><%= item.etat_dossier %></td>

                      <% if (item.etat_dossier==="En attente") { %><td><a href="/config/changerDonneesDemande" class="btn-pr">Modifier</a></td><% 
                      }%>
                      <% if (item.etat_dossier==="En attente") { %><td><a href="/config/donneesDemande/supprimer?id=<%= item.id %>" class="btn-pr">Supprimer</a></td><% 
                    }%>
          
                    </tr>
          
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

    </div>

</div>
</main>



