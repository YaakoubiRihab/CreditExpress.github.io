<html>
    <head>
        <title>Ajouter Admin</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CréditUBCI</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#"></span>Modifier un administrateur</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/config"></span>Retour</a>
            </li>
          </ul>
      </nav><br>
        <div class="container">
             <form action="/admin/modifier" method="POST" >
                <input type="hidden" value="<%= item %>" name="id">
                <div class="form-group">
                  <label for="nomAdmin">Nom</label>
                  <input type="text" class="form-control" name="nomAdmin" value="<%= item.nomAdmin %>">
                </div>
                <div class="form-group">
                  <label for="prenomAdmin">Prénom</label>
                  <input type="text" class="form-control" name="prenomAdmin" value="<%= item.prenomAdmin %>">
                </div>
                <div class="form-group">
                    <label for="cinAdmin">Numéro de CIN</label>
                    <input type="text" class="form-control" name="cinAdmin" value="<%= item.cinAdmin %>">
                  </div>
                  <div class="form-group">
                    <label for="PostAdmin">Poste</label>
                    <select class="custom-select mr-sm-2" name="PostAdmin" value="<%= item.PostAdmin %>">
                        <option selected>Commercial</option>
                        <option>DOC</option>
                        <option>Back office</option>
                      </select>
                  </div>
                  <div class="form-group">
                    <label for="date_embrauche">Date d'embrauche</label>
                    <input type="date" class="form-control" name="date_embrauche" value="<%= item.date_embrauche %>">
                  </div>
                  <div class="form-group">
                    <label for="ville">Ville</label>
                    <select class="custom-select mr-sm-2" name="ville" value="<%= item.ville %>">
                        <option selected>Ariana</option>
                        <option>Béja</option>
                        <option>Ben Arous</option>
                        <option>Bizerte</option>
                        <option>Gabes</option>
                        <option>Gafsa</option>
                        <option>Jandouba</option>
                        <option>Kairouan</option>
                        <option>Kasserine</option>
                        <option>Kebili</option>
                        <option>La Manouba</option>
                        <option>Le Kef</option>
                        <option>Mahdia</option>
                        <option>Médnine</option>
                        <option>Monastir</option>
                        <option>Nabeul</option>
                        <option>Sfax</option>
                        <option>Sidi Bouzid</option>
                        <option>Siliana</option>
                        <option>Sousse</option>
                        <option>Tataouine</option>
                        <option>Tozeur</option>
                        <option>Tunis</option>
                        <option>Zaghouan</option>   
                      </select>
                  </div>
                  <div class="form-group">
                    <label for="tel_mobileAd">N°.Mobile</label>
                    <input type="text" class="form-control" name="tel_mobileAd" value="<%= item.tel_mobileAd %>">
                  </div>
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" value="<%= item.email %>">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Enregistré">
                  </div>
        </form>
    </div>
        </body>
        </html>