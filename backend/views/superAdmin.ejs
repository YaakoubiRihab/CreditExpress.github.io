<br>
          <a href="/admin/ajouter/" class="btn btn-success">Ajouter un admin</a><br><br>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">N°CIN</th>
                <th scope="col">Poste</th>
                <th scope="col">Ville</th>
                <th scope="col">Date embrauche</th>
                <th scope="col">Tel.Mobile</th>
                <th scope="col">Email</th>
                <th scope="col">Mot de passe</th>

              </tr>
            </thead>
            <tbody>
            <% items.forEach(function(item,index){ %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.nomAdmin %></td>
                <td><%= item.prenomAdmin %></td>
                <td><%= item.cinAdmin %></td>
                <td><%= item.PostAdmin %></td>
                <td><%= item.ville %></td>
                <td><%= item.date_embrauche %></td>
                <td><%= item.tel_mobileAd %></td>
                <td><%= item.email %></td>
                <td><%= item.mot_de_passe %></td>

               <td> <a href="/admin/modifier?id=<%= item.id %>" class="btn btn-primary">Modifier</a> </td>
               <td><a href="/admin/supprimer?id=<%= item.id %>" onclick="return confirm('are you sure ?')" class="btn btn-danger">Supprimer</a> </td>

              </tr>
              <% }); %>
            </tbody>
          </table>
    </body>
</html>